<title>Gửi ý kiến cho HousewareReview</title>
<link rel="stylesheet" href="/css/accountContact.css">
<link rel="stylesheet" href="/css/general.css">

<div class="container-xl account-info-container">
    <div class="row">
        <div class="col-12 col-md-4 col-lg-3 my-3">
            {{> customerAccountSidebar}}
        </div>
        <div class="col-12 col-md-8 col-lg-9 my-3">
            <div class="row justify-content-between">
                <h4 class="text-uppercase mb-4 mt-4 w-auto">Gửi ý kiến cho HousewareReview</h4>
                <div class="span w-auto d-flex pe-5">
                    <a href="#" class="align-self-center fs-5">Visit Our Fanpage
                        <i class="fab fa-facebook-square img-fb ps-3"></i>
                    </a>
                </div>
            </div>
            <form method="POST" action="https://formspree.io/f/myyoyjby" class="px-5 py-4">
                <div class="row">
                    <div class="col-sm-6 form-group">
                        <input class="form-control" id="name" name="name" value="{{user.fullname}}" placeholder="Name " type="text" required>
                    </div>
                    <div class="col-sm-6 form-group">
                        <input class="form-control" id="email" name="email" value="{{user.mail}}" placeholder="Email" type="email" required>
                    </div>
                </div>
                <textarea class="form-control mt-3" id="comments" name="comments" placeholder="Your Opinion" rows="5"></textarea><br>
                <div class="d-flex justify-content-end"> 
                    <button class="btn btn-send mx-3" type="submit">Send</button>
                </div>
            </form>



        </div>
    </div>
</div>

<script>
    const sidebarItemContact = document.getElementById('account_sidebar__contact');
    sidebarItemContact.classList.add('account-sidebar__item--active');
</script>
<script>
    document.getElementById("navbarDropdownMenuLink").classList.add("active");
</script>