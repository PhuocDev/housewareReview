<link rel="stylesheet" href="/css/blog.css">
<title>Blog</title>


{{!---------------------------------------------------- blog-head ----------------------------------------------------}}

<div id="carouselExampleCaptions" class="carousel slide blog-head" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <a href="#body" class="carousel-item active">
      <img src="./../img/blog/blog_head.jpg" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5>Blog</h5>
        <p>Some representative placeholder content for the first slide.</p>
      </div>
    </a>
    <a href="/blog/{{blogs.0._id}}" class="carousel-item">
      <img src="{{blogs.0.img}}" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5>{{blogs.0.title}}</h5>
        <p>{{blogs.0.description}}</p>
      </div>
    </a>
    <a href="/blog/{{blogs.1._id}}" class="carousel-item">
      <img src="{{blogs.1.img}}" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5>{{blogs.1.title}}</h5>
        <p>{{blogs.1.description}}</p>
      </div>
    </a>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

{{!---------------------------------------------------- blog-body ----------------------------------------------------}}

<div class="blog-body mb-5 container px-lg-5" id="body">
    <div class="blog-nav">
        <p class="mt-3 text-center">
            <button class="btn btn-collapse" type="button" data-bs-toggle="collapse" data-bs-target="#collapseWidthExample" aria-expanded="false" aria-controls="collapseWidthExample">
                <i class="fas fa-caret-down"></i>
            </button>
        </p>
        <div class="collap-content">
            <div class="collapse show" id="collapseWidthExample">
                <div class="card card-body" >
                    <div class="row d-flex px-0 body1 mx-0">

                        <div class="box col mx-3 blog-item4">
                            <button class="p-3 btn-dog-breed" id="btn-dog-breed" onclick="activeCategory(this.id)">
                                <img src="./img/blog/dog.png" width="60" height="60">
                                <h5 class="mt-2">Các giống chó</h5>
                            </button>
                        </div>

                        <div class="box col mx-3 blog-item4">
                            <button class="p-3 btn-cat-breed" id="btn-cat-breed" onclick="activeCategory(this.id)">
                                <img src="./img/blog/cat.png" width="60" height="60">
                                <h5 class="mt-2">Các giống mèo</h5>
                            </button>
                        </div>

                        <div class="box col mx-3 blog-item4">
                            <button class="p-3 btn-takecare-dog" id="btn-takecare-dog" onclick="activeCategory(this.id)">
                                <img src="./img/blog/pet-care1.png" width="60" height="60">
                                <h5 class="mt-2">Chăm sóc chó</h5>
                            </button>
                        </div>

                        <div class="box col mx-3 blog-item4">
                            <button class="p-3 btn-takecare-cat" id="btn-takecare-cat" onclick="activeCategory(this.id)">
                                <img src="./img/blog/pet-care2.png" width="70" height="60">
                                <h5 class="mt-2">Chăm sóc mèo</h5>
                            </button>
                        </div>
                        <script>
                                function activeCategory(id){
                                    document.getElementById("btn-dog-breed").classList.remove("active-btn");
                                    document.getElementById("btn-cat-breed").classList.remove("active-btn");
                                    document.getElementById("btn-takecare-dog").classList.remove("active-btn");
                                    document.getElementById("btn-takecare-cat").classList.remove("active-btn");
                                    document.getElementById(id).classList.add("active-btn");
                                }
                        </script>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="d-flex justify-content-end"> 
        {{#ifCond user.role '==' 'admin'}}
        <a href="/blog/editBlog" class="btn p-2 btn-createBlog"><i class="far fa-edit"></i></a>
        <a href="/blog/postBlog" class="btn p-2 btn-createBlog"><i class="fas fa-upload"></i></a>
        {{/ifCond}}
        <button class="btn p-2 btn-allCatagory">All blog</button>
    </div>
    <div class="content row mx-0 mt-4" id="content">
        {{#each blogs }}
            <div class="card col-md-4 mb-4" data-bs-toggle="popover" data-bs-trigger="hover focus" title="{{this.title}}">
            <img src="{{this.img}}" class="card-img-top" alt="" height="250">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.description}}</p>
                <a href="/blog/{{this._id}}" class="btn btn-read">Read</a>  
            </div>
            </div>
        {{/each}}    
    </div>

    {{!------------------------------------------------- page navigation --------------------------------}}

<div class="d-flex justify-content-center">
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
            </li>
        </ul>
    </nav>
</div>
    
</div>

